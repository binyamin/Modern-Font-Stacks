{
	"compilerOptions": {
		"lib": ["ESNext"],
		"module": "ESNext",
		"target": "ESNext",
		"moduleResolution": "Bundler",
		"noEmit": true,
		"allowImportingTsExtensions": true,
		"moduleDetection": "force",
		"allowJs": true,
		// Best Practices
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"downlevelIteration": true,
		"allowSyntheticDefaultImports": true
	}
}
